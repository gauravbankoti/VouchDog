<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.vouchdog.SecurityQuesActivity"
    android:background="@color/accent_material_light">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Enhanced security please select your secret questions ana answers"
        android:id="@+id/textView4"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="@dimen/abc_action_bar_content_inset_material" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="16dp"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/view1">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Security Question 1"
                        android:id="@+id/textView45"
                        android:layout_gravity="center"
                        android:textColor="@color/abc_primary_text_material_light" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner23"
                        android:spinnerMode="dialog" />

                    <android.widget.TextView
                        android:id="@+id/tvInvisibleError1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="right" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ans1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText54"
                            android:hint="Secret Answer" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="16dp"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/view2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Security Question 2"
                        android:id="@+id/textView46"
                        android:layout_gravity="center"
                        android:textColor="@color/abc_primary_text_material_light" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner24"
                        android:spinnerMode="dialog" />
                    <android.widget.TextView
                        android:id="@+id/tvInvisibleError2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="right" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ans2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText56"
                            android:hint="Secret Answer" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Save"
                        android:id="@+id/button5"
                        android:layout_gravity="center"
                        android:textSize="@dimen/abc_action_bar_content_inset_material"
                        android:theme="@style/MyButton"
                        android:textColor="@color/abc_primary_text_material_dark" />
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please remember your answers or make a note of it and store in a secure place,you will need it for password reset."
                android:id="@+id/textView5"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
            </LinearLayout>
    </ScrollView>


</LinearLayout>
