<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.vouchdog.AddDocuments"
    android:background="@color/accent_material_light">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="16dp"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/view1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner"
                        android:spinnerMode="dialog"
                        android:dropDownSelector="@color/accent_material_light" />

                    <android.widget.TextView
                        android:id="@+id/tvInvisibleError3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="right" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner1"
                        android:spinnerMode="dialog" />
                    <android.widget.TextView
                        android:id="@+id/tvInvisibleError4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="right" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText10"
                            android:hint="Full Name as appears in the document"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="16dp"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/view2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_issueby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText21"
                            android:hint="Issued By *" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_issueDate"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText39"
                            android:hint="Date of Issue *" />
                    </android.support.design.widget.TextInputLayout>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton9"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_date_range_black_24dp"
                            android:theme="@style/MyButton" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(not applicable)"
                        android:id="@+id/checkBox13"
                        android:checked="false" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_till"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText40"
                            android:hint="Valid Till " />
                    </android.support.design.widget.TextInputLayout>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton10"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_date_range_black_24dp"
                            android:theme="@style/MyButton" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="16dp"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/view3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner18"
                        android:spinnerMode="dialog" />
                    <android.widget.TextView
                        android:id="@+id/tvInvisibleError5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="right" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_invCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText42"
                            android:hint="Country"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>



                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner19"
                        android:spinnerMode="dialog" />
                    <android.widget.TextView
                        android:id="@+id/tvInvisibleError6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="right" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_invState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText43"
                            android:hint="State"
                            android:visibility="gone" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText41"
                            android:hint="City " />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose File"
                            android:id="@+id/button16"
                            android:theme="@style/MyButton"
                            android:textColor="@color/abc_primary_text_material_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.EditText"
                            android:id="@+id/textView40" />
                    </LinearLayout>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="Save"
                        android:id="@+id/button17"
                        android:theme="@style/MyButton1"
                        android:layout_gravity="center"
                        android:textSize="@dimen/abc_action_bar_content_inset_material"
                        android:textColor="@color/abc_primary_text_material_dark" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
